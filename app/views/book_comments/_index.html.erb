<% book.book_comments.each do |book_comment| %>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(book_comment.user) do %>
          <%= attachment_image_tag(book_comment.user, :profile_image, size:'20x20', fallback: "no_image.jpg") %>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-danger", remote: true %>
        <% end %>
      </td>
    </tr>
  <tbody>
<% end %>